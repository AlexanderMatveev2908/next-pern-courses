model UserAnswer {
    id String @id @default(uuid())

    userConceptID String 
    userConcept UserConcept @relation(fields: [userConceptID],references: [id],name:"UserConceptAnswers")

    questionID String
    question Question @relation(fields: [questionID],references: [id],name:"UserQuestion")

    variantID String
    answer Variant @relation(fields: [variantID],references: [id],name:"UserAnswer")
    isCorrect Boolean @default(false)

    @@index([variantID])

    createdAt DateTime @default(now())
    deletedAt DateTime? 
}